# =============================================================================
# FARM TRACKER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
#
# For Railway/Render deployment, set these in the platform's environment variables
# =============================================================================

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# REQUIRED IN PRODUCTION: Generate with:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
# Example for Railway: ALLOWED_HOSTS=your-app.up.railway.app,your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Option 1: DATABASE_URL (preferred for cloud platforms like Railway, Render, Heroku)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Option 2: Individual settings (for local development)
DB_NAME=farm_tracker
DB_USER=farm_tracker_user
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# REDIS / CACHE CONFIGURATION
# =============================================================================

# Redis URL for caching (optional, uses local memory cache if not set)
# CACHE_URL=redis://localhost:6379/1

# Celery broker and result backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Options: console (development), sendgrid, ses, smtp
EMAIL_BACKEND=console

# --- For SendGrid ---
# SENDGRID_API_KEY=your-sendgrid-api-key

# --- For Amazon SES ---
# AWS_SES_REGION_ENDPOINT=email-smtp.us-west-2.amazonaws.com
# AWS_SES_ACCESS_KEY=your-access-key
# AWS_SES_SECRET_KEY=your-secret-key

# --- For Generic SMTP (Gmail, etc.) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Common email settings
DEFAULT_FROM_EMAIL=Grove Master <noreply@your-domain.com>

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# URL where the frontend is hosted (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Additional CORS origins (comma-separated, for production)
# CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://www.your-frontend.com

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# OpenWeatherMap API (for weather data)
# Get your key at: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# CIMIS (California Irrigation Management Information System)
# Register at: https://et.water.ca.gov/Home/Register
CIMIS_APP_KEY=your-cimis-app-key

# Anthropic API (for AI-powered PDF extraction)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# PRODUCTION-SPECIFIC (set these when deploying)
# =============================================================================

# Sentry DSN for error tracking (optional but recommended)
# SENTRY_DSN=https://your-sentry-dsn

# AWS S3 for media files (optional, uses local storage if not set)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-west-2
